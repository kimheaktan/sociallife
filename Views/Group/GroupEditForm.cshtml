
@model GroupEditViewModel

@{
    ViewData["Title"] = "New Group";
    @* <link rel="stylesheet" href="~/css/New.css"> *@
}

@* <div class="container bg">  *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark topnav sticky">
        <a class="navbar-brand" href="/">Sociallife</a>
        <form class="form-inline my-2 mr-sm-2" id="searchbar">
            <input id="search-input" class="form-control mr-sm-2" type="search" onkeyup="Search()" placeholder="Search group..." aria-label="Search">
        </form>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto  ">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">Home <span class="sr-only">()</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Explore
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-action="NewGroup" asp-controller="Group">Create a New Group</a>
                        <a class="dropdown-item" href="/groups">Search for Group</a>
                        <a class="dropdown-item" href="">Search for Event Near You</a>
                        <a class="dropdown-item" href="">About Us</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a asp-action="Logout" asp-controller="home" class="nav-link">Sign out</a>
                </li> 
            </ul>
        </div>
        <button class="navbar-toggler browser-default" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <h4>
            <a href="/dashboard">Welcome! @HttpContextAccessor.HttpContext.Session.GetString("UserName")</a>
        </h4>
    </nav>
</div>
    

<div class="container" style="margin-top: 100px">
    <div class="card border-0 shadow my-5" >
        <div class="card-body p-5">
            <h2 class="display-4 text-center">Edit Group</h2>
                <form asp-action="EditGroup" asp-controller="Group" class="group-form col-xs-9" asp-route-groupId="@Model.TBEditedGroup.GroupId"  >

                    <label asp-for="Group.GroupName"></label>
                    <span asp-validation-for="Group.GroupName" class="text-danger"></span>
                    <input  asp-for="Group.GroupName" type="text" class="form-control" value="@Model.TBEditedGroup.GroupName">

                    <label asp-for="Group.City"></label>
                    <span asp-validation-for="Group.City" class="text-danger"></span>
                    <input  asp-for="Group.City" type="text" class="form-control" value="@Model.TBEditedGroup.City">

                    <label asp-for="Group.Description"></label>
                    <span asp-validation-for="Group.Description" class="text-danger"></span>
                    <textarea asp-for="Group.Description" type="text" class="form-control" style="height:200px" placeholder="@Model.TBEditedGroup.Description"></textarea><br>

                    <input type="submit" class="btn btn-danger pinkBtn"  value="Edit">
                </form>
        </div>
    </div>
</div>


